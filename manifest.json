{
    "manifest_version": 3,
    "name": "PlanetHorse+",
    "version": "1.0",
    "content_security_policy": {
        "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline'; object-src 'none';"
    },
    "description": "Display real-time USD value for your PH tokens - Unofficial PlanetHorse extension",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
    "permissions": [
      "scripting"
    ],
    "host_permissions": [
      "https://exchange-rate.skymavis.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://planethorse.io/game*"],
        "js": ["src/config.js", "src/api.js", "src/ui.js", "contentScript.js"]
      }
    ]
  }