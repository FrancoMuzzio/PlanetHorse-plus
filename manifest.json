{
    "manifest_version": 3,
    "name": "PlanetHorse+",
    "version": "1.0",
    "content_security_policy": {
        "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline'; object-src 'none';"
    },
    "description": "Shows the USD value of your PlanetHorse tokens",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://exchange-rate.skymavis.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://planethorse.io/game*"],
        "js": ["contentScript.js"]
      }
    ]
  }